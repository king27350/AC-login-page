<div class="container-fluid row justify-content-center">
  <form action="/" method="POST" style="width:530px;padding:15px;">
    <div class="form-group">
      <label for="inputEmail">登入</label>
      <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="信箱"
        name="inputEmail">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="密碼">
      <span class="error-msg alert text-danger" style="font-size: 12px;" role="alert">{{ errorMsg }}</span>
    </div>
    <div class="optionsWrapper" style="display: flex;justify-content: space-between;padding: 7.5px 0px0px;">
      <div style="font-size: 12px;">忘記密碼</div>
      <div style="font-size: 12px;">加入會員</div>
    </div>
    <div class=" button-group row justify-content-center">
      <button type="submit" class="btn btn-light border m-2">登入</button>
    </div>
  </form>
</div>